{

  "manifest_version": 2,
  "name": "ZdS-Relecture",
  "version": "1.3",
  "homepage_url": "https://github.com/Vayel/zds-relecture-web-extension",
  "icons": {
    "32": "icons/zds-32.png",
    "48": "icons/zds-48.png",
    "64": "icons/zds-64.png"
  },
  "permissions": [
    "activeTab"
  ],
  "page_action": {
    "browser_style": true,
    "default_icon": "icons/zds-32.png",
    "default_title": "ZdSRelecture",
    "show_matches": [
      "*://zestedesavoir.com/contenus/*",
      "*://zestedesavoir.com/tutoriels/*",
      "*://zestedesavoir.com/articles/*",
      "*://zestedesavoir.com/billets/*"
    ]
  },
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    "icons/copy.png",
    "icons/check.png",
    "icons/quit.png",
    "icons/comment.png",
    "icons/comment-full.png",
    "icons/delete.png"
  ]
}
